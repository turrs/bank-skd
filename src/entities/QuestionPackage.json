{
  "name": "QuestionPackage",
  "table": "question_packages",
  "fields": [
    {
      "name": "id",
      "type": "uuid",
      "primary": true
    },
    {
      "name": "title",
      "type": "varchar"
    },
    {
      "name": "description",
      "type": "text"
    },
    {
      "name": "is_active",
      "type": "boolean",
      "default": true
    },
    {
      "name": "requires_payment",
      "type": "boolean",
      "default": false
    },
    {
      "name": "price",
      "type": "integer",
      "nullable": true
    },
    {
      "name": "duration_minutes",
      "type": "integer"
    },
    {
      "name": "total_questions",
      "type": "integer"
    },
    {
      "name": "created_at",
      "type": "timestamp",
      "default": "now()"
    },
    {
      "name": "original_price",
      "type": "integer",
      "description": "Harga asli sebelum discount"
    },
    {
      "name": "discount_percentage",
      "type": "integer",
      "description": "Persentase discount (0-100)"
    },
    {
      "name": "discount_end_date",
      "type": "timestamp",
      "description": "Tanggal berakhir discount"
    },
    {
      "name": "is_featured",
      "type": "boolean",
      "description": "Apakah paket featured untuk marketing"
    },
    {
      "name": "creator_id",
      "type": "uuid",
      "references": "users.id",
      "nullable": true,
      "description": "ID of the user who created this package (mentor or admin)"
    }
  ]
}
